<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/XElement.CloudSyncHelper.UI.Win32.Common;component/Dictionaries/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- IanStorm, 2016-07-07: This is the color used by MS for the default profile pic in Win10. -->
    <!--<SolidColorBrush x:Key="DefaultUserProfileBgColor" 
                     Color="#666666" 
    />-->
    <SolidColorBrush x:Key="DefaultUserProfileBgColor" 
                     Color="#d1d1d1" 
    />

    <SolidColorBrush x:Key="ToggleButtonCheckedBg" 
                     Color="{Binding Source={StaticResource MenuBarToggleButtonCheckedBackground}, 
                                     Path=Color}" 
    />

</ResourceDictionary>