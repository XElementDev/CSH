<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    
                    xmlns:modules="clr-namespace:XElement.CloudSyncHelper.UI.Win32.Modules">

    <Style x:Key="RootContainer" TargetType="{x:Type StackPanel}">
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>


    <Style TargetType="{x:Type Image}">
        <Setter Property="Margin" Value="4 0 0 4" />
    </Style>

    <Style TargetType="{x:Type modules:SupportedOperatingSystemView}">
        <Setter Property="Margin" Value="2 0 2 0" />
        <Setter Property="MinWidth" Value="40" />
    </Style>

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="Padding" Value="4 0 0 4" />
    </Style>

</ResourceDictionary>